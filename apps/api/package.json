{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:local": "set NODE_ENV=development && ENV_FILE=.env && STAGE=dev && nest start",
    "dev": "set NODE_ENV=development && set ENV_FILE=.env && set STAGE=dev && nest start --watch",
    "start:local:watch": "set NODE_ENV=development && ENV_FILE=.env.local && STAGE=dev && nest start --watch",
    "start:local:debug": "set NODE_ENV=development && ENV_FILE=.env.local && STAGE=dev && nest start --debug --watch",
    "start:dev": "set NODE_ENV=development && ENV_FILE=.env.development && STAGE=dev && node dist/main",
    "start:stg": "set NODE_ENV=production && ENV_FILE=.env.staging && STAGE=stg && node dist/main",
    "start:prod": "set NODE_ENV=production && ENV_FILE=.env.production && STAGE=prod && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "set NODE_ENV=test && jest",
    "test:watch": "NODE_ENV=test && jest --watch",
    "test:cov": "set NODE_ENV=test && jest --coverage",
    "test:debug": "set NODE_ENV=test && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "set NODE_ENV=test && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/devtools-integration": "^0.1.6",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/websockets": "^10.3.9",
    "@types/helmet": "^4.0.0",
    "axios": "^1.7.2",
    "class-validator": "^0.14.1",
    "express-http-context": "^1.2.4",
    "helmet": "^7.1.0",
    "moment": "^2.30.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "shortid": "^2.2.16",
    "slugify": "^1.6.6",
    "uuidv4": "^6.2.13",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
